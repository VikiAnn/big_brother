<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>BigBrother</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render 'partials/nav' %>
  <div class="container">
    <%= yield %>
  </div>
<div class="container">
  <div class="page-header">
    <h1><%= yield :page_header %></h1>
  </div>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>

  <div class="col-sm-6">
    <%= yield %>
  </div>

</div>

<div id="footer">
  <div class="container">
    <p class="text-muted">Created by <a href="#" target="_blank">Turing Cohort 1409</a></p>
  </div>
</div>

</body>
</html>

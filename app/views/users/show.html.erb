<% page_header "Commands" %>

<div class="col-sm-6">
<div class="well well-lg">
  <h2><%= @user.name %></h2>
  <h5>API Key: <%= @user.api_key.access_token %></h5>
</div>
</div>

<div class="col-sm-6">
  <div class="well well-lg command-container">
    <h2>My Commands</h2>
    <ul>
      <% @user.sorted_commands.each do |command| %>
        <li>
          <% command.each_pair do |command, count| %>
            <%= command %><span class="command-count"><%= count %></span>
          <% end %>
        </li>
      <% end %>
    </ul>

  </div>
<div style="clear:both;"></div>

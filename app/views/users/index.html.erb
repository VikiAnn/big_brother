<% page_header "Users" %>

<div class="col-sm-6">
  <div class="well well-sm">
    <h2>Top Trending Commands</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Command</th>
          <th>Count</th>
        </tr>
      </thead>
      <tbody>
        <% @top_commands.each do |command| %>
          <% command.each_pair do |command, count| %>
            <tr>
              <td><%= command %></td>
              <td><%= count %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="well well-sm">
    <h2>Top Editors</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Command</th>
          <th>Count</th>
        </tr>
      </thead>
      <tbody>
        <% @top_editors.each do |editor| %>
          <% editor.each_pair do |editor, count| %>
            <tr>
              <td><%=editor %></td>
              <td><%= count %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

<div class="col-sm-6">
  <% @users.each do |user| %>
    <div class="well well-sm">
      <ul class="list-inline">
        <li><%= image_tag user.picture, size: '50' %></li>
        <% if user == current_user %>
          <li><h2><%= link_to user.name, user_path(user) %></h2></li>
        <% else %>
          <li><h2><%= user.name %></h2></li>
        <% end %>
      </ul>
      <% if user.commands.present? %>
        <h4>Favorite command: <%= user.most_used_command %></h4>
      <% end %>
    </div>
  <% end %>
</div>
<div style="clear:both;"></div>
